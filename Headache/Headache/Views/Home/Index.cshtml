        <h1>
            <img id="ctl00_Image2" class="img-responsive" alt="Fawri Logo" style="border-width:0px;" src="~/Content/img/fawri.png" />
        </h1>
    </div>*@
</div>

<div class="clearfix" style="background-image: url(../../Content/img/header_bg.jpg); background-repeat:no-repeat;"></div>

<div class="site-content">

    <div id="ctl00_div1" class="row ttsdesc">
        <div class="col-xs-9" style="font-size: 18px;">
            <strong>
                Login
            </strong>
        </div>
    </div>

    <form action="@Url.Action("Login")" method="post">
        <table style="width: 100%;">
            <tr>
                <td>
                    <br />

                    <div class="form-group">
                        <label class="control-label col-sm-3">Username<span class=ManShowHide>*</span>&nbsp;:&nbsp;</label>
                        <div class="col-sm-9">
                            <div class="row">
                                <div class="col-sm-7">
                                    <input class="form-control NoPadding" type="text" id="input-username" name="input_username" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Password<span class=ManShowHide>*</span>&nbsp;:&nbsp;</label>
                        <div class="col-sm-9">
                            <div class="row">
                                <div class="col-sm-7">
                                    <input class="form-control NoPadding" type="password" id="input-password" name="input_password" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <br />


                </td>
            </tr>
            <tr>
                <td align="center">
                    <div class="row voffset2" style="align-content: center">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <input type="submit" tabindex="1" class="btn btnBlack" value="Log in" />
                            </div>

                        </div>
                    </div>
                </td>
            </tr>
            <tr></tr>

        </table>
    </form>
</div>